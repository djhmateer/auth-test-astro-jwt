---
import Layout from '../../layouts/Layout.astro';
import { checkAuthentication } from '../../utils/auth.ts';

const authResult = await checkAuthentication(Astro);

// If authentication failed, checkAuthentication returns a Response (redirect)
if (authResult instanceof Response) {
	return authResult;
}

console.log('User accessed /projects/project2 page');

const { loginTime, currentTime } = authResult;
---

<Layout>
	<main>
		<h1>Project 2</h1>
		<p>This is a sample protected project page demonstrating session-based authentication.</p>
		<p><strong>Server time (UTC):</strong> {currentTime}</p>
		<p><strong>Client time:</strong> <span id="client-time">Loading...</span></p>
		{loginTime && <p><strong>Login time (UTC):</strong> {new Date(loginTime).toLocaleString()}</p>}


		<div class="actions">
			<a href="/projects">‚Üê Back to Projects</a>
			<a href="/">üè† Home</a>
			<form method="POST" action="/api/logout" style="display: inline;">
				<button type="submit" class="logout-btn">Logout</button>
			</form>
		</div>
	</main>
</Layout>

<style>
	main {
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		color: #111827;
		margin-bottom: 1rem;
	}

	h2 {
		color: #374151;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	h3 {
		color: #4b5563;
		margin-bottom: 0.5rem;
	}

	p {
		color: #4b5563;
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.content {
		margin: 2rem 0;
	}

	ul {
		background: #f9fafb;
		padding: 1.5rem;
		border-radius: 8px;
		border-left: 4px solid #3245ff;
	}

	li {
		color: #374151;
		margin-bottom: 0.5rem;
	}

	.features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
		margin-top: 1rem;
	}

	.feature {
		background: #f8fafc;
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid #e5e7eb;
	}

	.actions {
		margin-top: 3rem;
		display: flex;
		gap: 1rem;
		align-items: center;
		flex-wrap: wrap;
	}

	a {
		color: #3245ff;
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		transition: background 0.2s;
	}

	a:hover {
		background: #f3f4f6;
		text-decoration: underline;
	}

	.logout-btn {
		background: #dc2626;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		cursor: pointer;
		font-size: 0.9rem;
		transition: background 0.2s;
	}

	.logout-btn:hover {
		background: #b91c1c;
	}
</style>

<script>
	const clientTimeElement = document.getElementById('client-time');
	if (clientTimeElement) {
		clientTimeElement.textContent = new Date().toLocaleString();
	}
</script>