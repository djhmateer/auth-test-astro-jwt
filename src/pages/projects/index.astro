---
import Layout from '../../layouts/Layout.astro';

// Get client IP for logging (with fallback)
const clientIP = Astro.request.headers.get('x-forwarded-for') ||
				 Astro.request.headers.get('x-real-ip') ||
				 'unknown';

// Check authentication using session
const isAuthenticated = await Astro.session.get('authenticated');
if (!isAuthenticated) {
	// Log unauthorized access attempt
	console.log(JSON.stringify({
		timestamp: new Date().toISOString(),
		event: 'AUTH_FAILURE',
		action: 'access_denied',
		route: '/projects',
		clientIP,
		message: 'Unauthorized access attempt to protected route'
	}));

	return Astro.redirect('/login', 302);
}

// Log successful access to protected route
console.log(JSON.stringify({
	timestamp: new Date().toISOString(),
	event: 'ACCESS_SUCCESS',
	action: 'route_access',
	route: '/projects',
	clientIP,
	message: 'Authenticated user accessed protected route'
}));

// Get login time from session
const loginTime = await Astro.session.get('loginTime');
const currentTime = new Date().toLocaleString();
---

<Layout>
	<main>
		<h1>Projects</h1>
		<p>Welcome to the projects page!</p>
		<p><strong>Server time:</strong> {currentTime}</p>
		<p><strong>Client time:</strong> <span id="client-time">Loading...</span></p>
		{loginTime && <p><strong>Login time:</strong> {new Date(loginTime).toLocaleString()}</p>}

		<div class="actions">
			<a href="/">‚Üê Back to Home</a>
			<form method="POST" action="/api/logout" style="display: inline;">
				<button type="submit" class="logout-btn">Logout</button>
			</form>
		</div>
	</main>
</Layout>

<style>
	main {
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		color: #111827;
		margin-bottom: 1rem;
	}

	p {
		color: #4b5563;
		margin-bottom: 2rem;
	}

	a {
		color: #3245ff;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	.actions {
		margin-top: 2rem;
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.logout-btn {
		background: #dc2626;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		cursor: pointer;
		font-size: 0.9rem;
		transition: background 0.2s;
	}

	.logout-btn:hover {
		background: #b91c1c;
	}
</style>

<script>
	document.getElementById('client-time').textContent = new Date().toLocaleString();
</script>