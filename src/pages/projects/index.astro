---
import Layout from '../../layouts/Layout.astro';

const currentTime = new Date().toLocaleString();
---

<Layout>
	<main>
		<h1>Projects</h1>
		<p>Welcome to the projects page!</p>
		<p><strong>Server time:</strong> {currentTime}</p>
		<p><strong>Client time:</strong> <span id="client-time">Loading...</span></p>
		<a href="/">‚Üê Back to Home</a>
	</main>
</Layout>

<style>
	main {
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		color: #111827;
		margin-bottom: 1rem;
	}

	p {
		color: #4b5563;
		margin-bottom: 2rem;
	}

	a {
		color: #3245ff;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}
</style>

<script>
	document.getElementById('client-time').textContent = new Date().toLocaleString();
</script>